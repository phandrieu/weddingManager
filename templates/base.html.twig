            <link href="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/css/tom-select.bootstrap5.min.css" rel="stylesheet">
        {% endblock %}
        {{ encore_entry_link_tags('app') }}
    </head>
    <body>
        {% if app.user %}
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="{{ path('home') }}">
                    <img src="{{ asset('logos/logo_white_nobg_noborder.png') }}" alt="Logo" class="me-2">
                    <span class="d-none d-sm-inline">Notre Messe de Mariage</span>
                </a>  
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('home') }}">{% if 'ROLE_ADMIN' in app.user.roles or 'ROLE_MUSICIAN' in app.user.roles %}Accueil{% else %}Mon mariage{% endif %}</a>
                        </li>
                        {% if 'ROLE_ADMIN' in app.user.roles or 'ROLE_MUSICIAN' in app.user.roles %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_wedding_index') }}">Mes mariages</a>
                        </li>
                        {% endif %}
                        {% if 'ROLE_MUSICIAN' in app.user.roles %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_repertoire_index') }}">Mon r√©pertoire</a>
                        </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_song_index') }}">Biblioth√®que partag√©e</a>
                        </li>
                        {% if 'ROLE_ADMIN' in app.user.roles %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_songtype_index') }}">Types de chants</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_user_index') }}">Utilisateurs</a>
                            </li>
                        {% endif %}
                    </ul>
                    <div class="d-flex align-items-center gap-3">
                        {# Notifications #}
                        <div class="position-relative" id="notification-container">
                            <button class="notification-bell" id="notification-bell" type="button" title="Notifications">
                                <i class="bi bi-bell-fill"></i>
                                <span class="notification-badge d-none" id="notification-badge">0</span>
                            </button>
                            
                            <div class="notification-dropdown" id="notification-dropdown">
                                <div class="notification-dropdown-header">
                                    <h3>Notifications</h3>
                                    <button class="mark-all-read" id="mark-all-read">Tout marquer comme lu</button>
                                </div>
                                <div class="notification-list" id="notification-list">
                                    <div class="notification-empty">
                                        <i class="bi bi-bell"></i>
                                        <p>Aucune notification</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <a href="{{ path('app_user_profile') }}" class="navbar-profile" title="Mon compte">
                            {% if app.user.profilePictureName %}
                                <img src="{{ vich_uploader_asset(app.user, 'profilePictureFile') }}" 
                                     alt="{{ app.user.firstName }}" 
                                     class="navbar-profile-picture">
                            {% else %}
                                <div class="navbar-profile-icon">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                            {% endif %}
                            <span>{{ app.user.firstName }}</span>
                        </a>
                        <a href="{{ path('app_logout') }}" class="navbar-logout" title="Se d√©connecter">
                            <i class="bi bi-box-arrow-right"></i>
                            <span class="d-lg-none">D√©connexion</span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
        {% endif %}

        <main class="app-main">
            <div class="container">
                {# Flash messages #}
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </div>
        </main>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {{ encore_entry_script_tags('app') }}
        
        <script>
            // Auto-dismiss flash messages apr√®s 5 secondes
            document.addEventListener('DOMContentLoaded', function() {
                const alerts = document.querySelectorAll('.alert:not(.alert-permanent)');
                alerts.forEach(function(alert) {
                    setTimeout(function() {
                        const bsAlert = new bootstrap.Alert(alert);
                        bsAlert.close();
                    }, 5000);
                });
            });
        </script>
    </body>
</html>



{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.3.1/dist/js/tom-select.complete.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const selects = document.querySelectorAll('.song-type-select');
            selects.forEach(select => {
                new TomSelect(select, {
                    plugins: ['remove_button'],
                    persist: false,
                    create: false,
                    maxItems: null,
                    placeholder: select.dataset.placeholder || 'S√©lectionner',
                    sortField: {
                        field: 'text',
                        direction: 'asc'
                    }
                });
            });
        });
    </script>
{% endblock %}