<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Wedding Manager{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {# Navbar uniquement si l'utilisateur est connect√© #}
        {% if app.user %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="{{ path('home') }}">
                    <img src="{{ asset('logo_navbar.png') }}" alt="Logo" style="height:40px; width:40px; object-fit:cover;" class="me-2">
                    Wedding Manager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_song_index') }}">Chants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_songtype_index') }}">Types de chants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_wedding_index') }}">Mariages</a>
                        </li>
                        {% if 'ROLE_ADMIN' in app.user.roles %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_user_index') }}">Utilisateurs</a>
                            </li>
                        {% endif %}
                    </ul>
                    <span class="navbar-text">
                        Bonjour, {{ app.user.firstName }}
                    </span>
                </div>
            </div>
        </nav>
        {% endif %}

        <div class="container mt-4">
            {% block body %}{% endblock %}
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>