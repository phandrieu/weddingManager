<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1"> {# üîë important pour la responsivit√© #}
        <title>{% block title %}Wedding Manager{% endblock %}</title>
        
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">

        {# CSS global responsive suppl√©mentaire #}
        <style>
            /* Pour que le contenu s'adapte toujours bien */
            body {
                font-family: system-ui, -apple-system, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
                background-color: #f8f9fa;
                min-height: 100vh;
                display: flex;
                flex-direction: column;
            }

            .container {
                max-width: 100%;
                padding-left: 1rem;
                padding-right: 1rem;
            }

            /* Navbar */
            .navbar-brand {
                font-weight: 600;
                font-size: 1.2rem;
            }

            .navbar-nav .nav-link {
                margin-right: .5rem;
            }

            /* Tables : scroll horizontal en mobile */
            .table-responsive {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

            /* Boutons toujours adaptables */
            .btn {
                white-space: normal;
            }

            /* Marges sur mobile pour √©viter que √ßa touche les bords */
            @media (max-width: 576px) {
                .container {
                    padding-left: .75rem;
                    padding-right: .75rem;
                }

                h1, h2, h3 {
                    font-size: 1.25rem;
                }
            }

            /* Pied de page coll√© en bas si tu en ajoutes un */
            footer {
                margin-top: auto;
                padding: 1rem;
                text-align: center;
                background: #fff;
                border-top: 1px solid #ddd;
            }
        </style>

        {% block stylesheets %}{% endblock %}
        {{ encore_entry_link_tags('app') }}
    </head>
    <body>
        {# Navbar uniquement si l'utilisateur est connect√© #}
        {% if app.user %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="{{ path('home') }}">
                    <img src="{{ asset('logo_navbar.png') }}" alt="Logo" style="height:40px; width:40px; object-fit:cover;" class="me-2">
                    Wedding Manager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('home') }}">{% if 'ROLE_ADMIN' in app.user.roles or 'ROLE_MUSICIAN' in app.user.roles %}Accueil{% else %}Mon mariage{% endif %}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_song_index') }}">R√©pertoire</a>
                        </li>
                        {% if 'ROLE_ADMIN' in app.user.roles or 'ROLE_MUSICIAN' in app.user.roles %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_wedding_index') }}">Mariages</a>
                        </li>
                        {% endif %}
                        {% if 'ROLE_ADMIN' in app.user.roles %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_songtype_index') }}">Types de chants</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_user_index') }}">Utilisateurs</a>
                            </li>
                        {% endif %}
                    </ul>
                    <span class="navbar-text">
                        Bonjour, {{ app.user.firstName }}
                    </span>
                </div>
            </div>
        </nav>
        {% endif %}

        <div class="container mt-4">
            {% block body %}{% endblock %}
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        {% block javascripts %}{% endblock %}
        {{ encore_entry_script_tags('app') }}
    </body>
</html>