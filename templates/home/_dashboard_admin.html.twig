<div class="dashboard-section">
    <div class="dashboard-section__header">
        <h2 class="wizard-panel__title mb-0">Vue administrateur</h2>
        <p class="text-muted mb-0">Accédez en un clin d'œil aux indicateurs clés de la plateforme.</p>
    </div>

    <div class="form-grid">
        <article class="form-card">
            <div class="form-card__title">
                <span>Statistiques globales</span>
                <h3 class="mb-0">Utilisateurs &amp; mariages</h3>
            </div>
            <div class="wizard-finance-grid">
                <div class="wizard-finance-item">
                    <div class="wizard-finance-label">Utilisateurs actifs</div>
                    <div class="wizard-finance-value">{{ data.userCount }}</div>
                </div>
                <div class="wizard-finance-item">
                    <div class="wizard-finance-label">Mariages gérés</div>
                    <div class="wizard-finance-value">{{ data.weddingCount }}</div>
                </div>
            </div>
        </article>

        <article class="form-card">
            <div class="form-card__title">
                <span>Pipeline</span>
                <h3 class="mb-0">Prochaines célébrations</h3>
            </div>
            {% if data.upcomingGlobal is not empty %}
                <ul class="list-unstyled mb-0 dashboard-list">
                    {% for wedding in data.upcomingGlobal %}
                        <li class="dashboard-list__item">
                            <div class="d-flex align-items-center gap-3">
                                <div class="wedding-avatars">
                                    {# Mariée #}
                                    {% set marieeInitial = wedding.entity.mariee ? (wedding.entity.mariee.firstName|default('')|slice(0,1)|upper) : (wedding.entity.marieeFirstName ? (wedding.entity.marieeFirstName|slice(0,1)|upper) : '') %}
                                    {% if wedding.entity.mariee and wedding.entity.mariee.profilePictureName %}
                                        <img src="{{ vich_uploader_asset(wedding.entity.mariee, 'profilePictureFile') }}" class="wedding-avatar" alt="Mariée" title="{{ wedding.entity.mariee.firstName|default('Mariée') }}">
                                    {% else %}
                                        <div class="wedding-avatar wedding-avatar--placeholder" title="{{ wedding.entity.marieeFirstName|default('Mariée') }}">
                                            {{ marieeInitial|default('-') }}
                                        </div>
                                    {% endif %}

                                    {# Marié #}
                                    {% set marieInitial = wedding.entity.marie ? (wedding.entity.marie.firstName|default('')|slice(0,1)|upper) : (wedding.entity.marieFirstName ? (wedding.entity.marieFirstName|slice(0,1)|upper) : '') %}
                                    {% if wedding.entity.marie and wedding.entity.marie.profilePictureName %}
                                        <img src="{{ vich_uploader_asset(wedding.entity.marie, 'profilePictureFile') }}" class="wedding-avatar" alt="Marié" title="{{ wedding.entity.marie.firstName|default('Marié') }}">
                                    {% else %}
                                        <div class="wedding-avatar wedding-avatar--placeholder" title="{{ wedding.entity.marieFirstName|default('Marié') }}">
                                            {{ marieInitial|default('-') }}
                                        </div>
                                    {% endif %}
                                </div>
                                <div>
                                    <div class="fw-semibold">{{ wedding.title }}</div>
                                    <div class="text-muted small">{{ wedding.date ?? 'Date à définir' }} </div>
                                    <div class="text-muted small"><i class="bi bi-geo-alt me-1"></i>{{ wedding.entity.church|default('') }}{% if wedding.entity.addressPostalCodeAndCity is not null %} — {{ wedding.entity.addressPostalCodeAndCity }}{% endif %}</div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                {% include 'components/_progress_rings.html.twig' with { wedding: wedding.entity } %}
                                <a href="{{ wedding.viewUrl }}" class="btn btn-outline-secondary btn-sm">Ouvrir</a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-muted mb-0">Aucun mariage à venir pour l'instant.</p>
            {% endif %}
        </article>
    </div>
</div>
