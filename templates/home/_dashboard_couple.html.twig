<div class="dashboard-section">
    <div class="dashboard-section__header">
        <h2 class="wizard-panel__title mb-0">Vos mariages</h2>
        <p class="text-muted mb-0">Suivez l'avancement de chaque dossier et complétez les informations manquantes.</p>
    </div>

    {% if data.weddings is not empty %}
        <div class="form-grid">
            {% for wedding in data.weddings %}
                <article class="form-card">
                    <div class="form-card__title">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <span>{{ wedding.date ?? 'Date à définir' }}</span>
                                <h3 class="mb-0">{{ wedding.title }}</h3>
                            </div>
                            <div class="wedding-avatars">
                                {# Mariée #}
                                {% set marieeInitial = wedding.entity.mariee ? (wedding.entity.mariee.firstName|default('')|slice(0,1)|upper) : (wedding.entity.marieeFirstName ? (wedding.entity.marieeFirstName|slice(0,1)|upper) : '') %}
                                {% if wedding.entity.mariee and wedding.entity.mariee.profilePictureName %}
                                    <img src="{{ vich_uploader_asset(wedding.entity.mariee, 'profilePictureFile') }}" class="wedding-avatar" alt="Mariée" title="{{ wedding.entity.mariee.firstName|default('Mariée') }}">
                                {% else %}
                                    <div class="wedding-avatar wedding-avatar--placeholder" title="{{ wedding.entity.marieeFirstName|default('Mariée') }}">
                                        {{ marieeInitial|default('-') }}
                                    </div>
                                {% endif %}

                                {# Marié #}
                                {% set marieInitial = wedding.entity.marie ? (wedding.entity.marie.firstName|default('')|slice(0,1)|upper) : (wedding.entity.marieFirstName ? (wedding.entity.marieFirstName|slice(0,1)|upper) : '') %}
                                {% if wedding.entity.marie and wedding.entity.marie.profilePictureName %}
                                    <img src="{{ vich_uploader_asset(wedding.entity.marie, 'profilePictureFile') }}" class="wedding-avatar" alt="Marié" title="{{ wedding.entity.marie.firstName|default('Marié') }}">
                                {% else %}
                                    <div class="wedding-avatar wedding-avatar--placeholder" title="{{ wedding.entity.marieFirstName|default('Marié') }}">
                                        {{ marieInitial|default('-') }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="text-muted small"><i class="bi bi-geo-alt me-1"></i>{{ wedding.entity.church|default('Non défini') }} {% if wedding.entity.addressPostalCodeAndCity is not null%} — {{ wedding.entity.addressPostalCodeAndCity }}{% endif %}</div>
                    </div>

                    <ul class="list-unstyled dashboard-missing mb-3">
                        {% if wedding.missing is not empty %}
                            {% for item in wedding.missing %}
                                <li><i class="bi bi-exclamation-circle text-warning me-2"></i>{{ item }}</li>
                            {% endfor %}
                        {% else %}
                            <li><i class="bi bi-check-circle text-success me-2"></i>Tout est à jour</li>
                        {% endif %}
                    </ul>

                    <div class="d-flex flex-wrap gap-2">
                        <a href="{{ wedding.viewUrl }}" class="btn btn-outline-secondary btn-sm">Consulter</a>
                        <a href="{{ wedding.editUrl }}" class="btn btn-cta btn-sm">Compléter</a>
                        {% if wedding.isArchived %}
                            <span class="badge text-bg-secondary">Archivé</span>
                        {% endif %}
                        {% if wedding.messe is not null %}
                            <span class="badge text-bg-light text-secondary">{{ wedding.messe ? 'Messe' : 'Célébration' }}</span>
                        {% endif %}
                    </div>

                    {# Progress Rings - en bas sur mobile #}
                    <div class="progress-rings-mobile-bottom">
                        {% include 'components/_progress_rings.html.twig' with { wedding: wedding.entity } %}
                    </div>
                </article>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-light mb-0">
            <div class="d-flex flex-column gap-3">
                <p class="mb-0">Aucun mariage n'est encore associé à votre profil.</p>
            </div>
        </div>
        <div>
                    <a href="{{ path('app_wedding_edit') }}" class="btn btn-cta">
                        <i class="bi bi-plus-circle me-2"></i>Créer mon mariage
                    </a>
                    <p class="text-muted small mt-2 mb-0">Vous pouvez aussi attendre qu'un accompagnateur vous invite via la plateforme.</p>
                </div>
    {% endif %}
</div>
