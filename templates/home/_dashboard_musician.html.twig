<div class="dashboard-section">
    <div class="dashboard-section__header">
        <h2 class="wizard-panel__title mb-0">Tableau musicien</h2>
        <p class="text-muted mb-0">Gardez un coup d'œil sur vos mariages à venir, vos validations et votre budget.</p>
    </div>

    <div class="form-grid">
        <article class="form-card">
            <div class="form-card__title">
                <span>À venir</span>
                <h3 class="mb-0">Prochains mariages</h3>
            </div>
            {% if data.upcoming is not empty %}
                <ul class="list-unstyled mb-0 dashboard-list">
                    {% for wedding in data.upcoming %}
                        <li class="dashboard-list__item">
                            <div class="d-flex align-items-center gap-3">
                                <div class="wedding-avatars">
                                    {# Mariée #}
                                    {% set marieeInitial = wedding.entity.mariee ? (wedding.entity.mariee.firstName|default('')|slice(0,1)|upper) : (wedding.entity.marieeFirstName ? (wedding.entity.marieeFirstName|slice(0,1)|upper) : '') %}
                                    {% if wedding.entity.mariee and wedding.entity.mariee.profilePictureName %}
                                        <img src="{{ vich_uploader_asset(wedding.entity.mariee, 'profilePictureFile') }}" class="wedding-avatar" alt="Mariée" title="{{ wedding.entity.mariee.firstName|default('Mariée') }}">
                                    {% else %}
                                        <div class="wedding-avatar wedding-avatar--placeholder" title="{{ wedding.entity.marieeFirstName|default('Mariée') }}">
                                            {{ marieeInitial|default('-') }}
                                        </div>
                                    {% endif %}

                                    {# Marié #}
                                    {% set marieInitial = wedding.entity.marie ? (wedding.entity.marie.firstName|default('')|slice(0,1)|upper) : (wedding.entity.marieFirstName ? (wedding.entity.marieFirstName|slice(0,1)|upper) : '') %}
                                    {% if wedding.entity.marie and wedding.entity.marie.profilePictureName %}
                                        <img src="{{ vich_uploader_asset(wedding.entity.marie, 'profilePictureFile') }}" class="wedding-avatar" alt="Marié" title="{{ wedding.entity.marie.firstName|default('Marié') }}">
                                    {% else %}
                                        <div class="wedding-avatar wedding-avatar--placeholder" title="{{ wedding.entity.marieFirstName|default('Marié') }}">
                                            {{ marieInitial|default('-') }}
                                        </div>
                                    {% endif %}
                                </div>
                                <div>
                                    <div class="fw-semibold">{{ wedding.title }}</div>
                                    <div class="text-muted small">{{ wedding.date ?? 'Date à définir' }}{% if wedding.time %} • {{ wedding.time }}{% endif %}</div>
                                    <div class="text-muted small"><i class="bi bi-geo-alt me-1"></i>{{ wedding.entity.church|default('Non défini') }} {% if wedding.entity.addressPostalCodeAndCity is not null%} — {{ wedding.entity.addressPostalCodeAndCity }}{% endif %}</div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                {% include 'components/_progress_rings.html.twig' with { wedding: wedding.entity } %}
                                <div class="text-end">
                                    <a href="{{ wedding.viewUrl }}" class="btn btn-outline-secondary btn-sm">Consulter</a>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-muted mb-3">Aucun mariage à venir enregistré pour le moment.</p>
                <a href="{{ path('app_wedding_edit') }}" class="btn btn-cta btn-sm">
                    <i class="bi bi-plus-circle me-2"></i>Créer un nouveau mariage
                </a>
            {% endif %}
        </article>

        <article class="form-card">
            <div class="form-card__title">
                <span>Finances</span>
                <h3 class="mb-0">Vos indicateurs</h3>
            </div>
            <div class="wizard-finance-grid">
                <div class="wizard-finance-item">
                    <div class="wizard-finance-label">Mariages suivis</div>
                    <div class="wizard-finance-value">{{ data.weddingCount }}</div>
                </div>
                <div class="wizard-finance-item">
                    <div class="wizard-finance-label">Montants cumulés</div>
                    <div class="wizard-finance-value">{{ data.totalAmount|number_format(2, '.', ' ') }} €</div>
                </div>
                <div class="wizard-finance-item">
                    <div class="wizard-finance-label">Crédits disponibles</div>
                    <div class="wizard-finance-value">{{ data.credits }}</div>
                </div>
            </div>
            <div class="mt-4 d-flex flex-wrap gap-2">
                <a href="{{ path('app_wedding_index') }}" class="btn btn-outline-secondary btn-sm">Voir tous vos mariages</a>
                <a href="{{ path('app_repertoire_index') }}" class="btn btn-cta btn-sm">Gérer mon répertoire</a>
            </div>
        </article>
    </div>
</div>
