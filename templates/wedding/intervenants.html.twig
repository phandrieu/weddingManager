{% extends 'base.html.twig' %}

{% block title %}Intervenants du mariage{% endblock %}

{% block body %}
<div class="container-xl py-5">
    <div class="intervenant-wrapper">
        <div class="intervenant-header">
            <div>
                <h1 class="intervenant-title">Intervenants du mariage</h1>
                <p class="mb-2 text-muted">Retirez ou coordonnez les intervenants associés à ce mariage.</p>
                <p class="mb-0 text-muted small">
                    {% if wedding.date %}
                        <i class="bi bi-calendar me-1"></i>{{ wedding.date|date('d/m/Y') }}
                    {% endif %}
                    {% if wedding.church %}
                        <span class="ms-3"><i class="bi bi-geo-alt me-1"></i>{{ wedding.church }}</span>
                    {% endif %}
                </p>
            </div>
            <div class="d-flex flex-wrap gap-2">
                <a href="{{ path('app_wedding_edit', {'id': wedding.id}) }}" class="btn btn-outline-secondary btn-rounded">
                    <i class="bi bi-arrow-left"></i>
                    Retour au dossier
                </a>
                <a href="{{ path('app_wedding_view', {'id': wedding.id}) }}" class="btn btn-outline-primary btn-rounded">
                    <i class="bi bi-eye"></i>
                    Voir la fiche
                </a>
            </div>
        </div>

        <section class="intervenant-section">
            <div class="intervenant-section__header">
                <span class="intervenant-section__title">Musiciens</span>
                <span class="badge text-bg-light">{{ wedding.musicians|length }}</span>
            </div>
            {% if wedding.musicians|length > 0 %}
                <div class="intervenant-list">
                    {% for musician in wedding.musicians %}
                        <article class="intervenant-card">
                            <div class="intervenant-card__header">
                                <div>
                                    <h3 class="h5 mb-1">{{ musician.fullName ?? musician.email }}</h3>
                                    <p class="mb-0 text-muted">{{ musician.email }}</p>
                                </div>
                                <form method="post"
                                      action="{{ path('app_wedding_intervenants_remove', {'id': wedding.id, 'type': 'musician', 'userId': musician.id}) }}"
                                      class="intervenant-card__actions"
                                      onsubmit="return confirm('Retirer cet intervenant du mariage ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('remove_intervenant_musician_' ~ wedding.id ~ '_' ~ musician.id) }}">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Retirer le musicien">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                            <div class="intervenant-card__meta">
                                <span class="badge rounded-pill bg-light text-secondary"><i class="bi bi-music-note-beamed me-1"></i>Musicien</span>
                                {% if musician.telephone %}
                                    <span><i class="bi bi-telephone me-1"></i>{{ musician.telephone }}</span>
                                {% endif %}
                            </div>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
                <div class="intervenant-section__empty">
                    Aucun musicien n'est encore associé à ce mariage.
                </div>
            {% endif %}
        </section>

        <section class="intervenant-section">
            <div class="intervenant-section__header">
                <span class="intervenant-section__title">Paroisse</span>
                <span class="badge text-bg-light">{{ wedding.parishUsers|length }}</span>
            </div>
            {% if wedding.parishUsers|length > 0 %}
                <div class="intervenant-list">
                    {% for parishUser in wedding.parishUsers %}
                        <article class="intervenant-card">
                            <div class="intervenant-card__header">
                                <div>
                                    <h3 class="h5 mb-1">{{ parishUser.fullName ?? parishUser.email }}</h3>
                                    <p class="mb-0 text-muted">{{ parishUser.email }}</p>
                                </div>
                                <form method="post"
                                      action="{{ path('app_wedding_intervenants_remove', {'id': wedding.id, 'type': 'parish', 'userId': parishUser.id}) }}"
                                      class="intervenant-card__actions"
                                      onsubmit="return confirm('Retirer cet intervenant du mariage ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('remove_intervenant_parish_' ~ wedding.id ~ '_' ~ parishUser.id) }}">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Retirer le contact paroissial">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                            <div class="intervenant-card__meta">
                                <span class="badge rounded-pill bg-light text-secondary"><i class="bi bi-building me-1"></i>Paroisse</span>
                                {% if parishUser.telephone %}
                                    <span><i class="bi bi-telephone me-1"></i>{{ parishUser.telephone }}</span>
                                {% endif %}
                            </div>
                        </article>
                    {% endfor %}
                </div>
            {% else %}
                <div class="intervenant-section__empty">
                    Aucun contact paroissial n'est encore associé à ce mariage.
                </div>
            {% endif %}
        </section>
    </div>
</div>
{% endblock %}
