{% extends 'base.html.twig' %}

{% block title %}Liste des mariages{% endblock %}

{% block body %}

<header class="page-header">
    {% if is_granted('ROLE_ADMIN') %}
        <h1>Liste des mariages</h1>
    {% else %}
        <h1>Mes mariages</h1>
    {% endif %}

    <a href="{{ path('app_wedding_edit') }}" class="btn btn-primary btn-rounded btn-icon">
        <i class="bi bi-plus-lg"></i>
        Créer un mariage
    </a>
</header>

<!-- Nav pills personnalisées -->
<ul class="app-tabs" role="tablist">
    <li class="nav-item">
        <button class="app-tab app-tab-primary active" id="tab-upcoming" data-bs-toggle="tab" data-bs-target="#pane-upcoming" type="button" role="tab" aria-controls="pane-upcoming" aria-selected="true">
            <i class="bi bi-clock-fill" style="font-size:1.15rem;"></i>
            <span>Mariages à venir</span>
        </button>
    </li>
    <li class="nav-item">
        <button class="app-tab app-tab-secondary" id="tab-archived" data-bs-toggle="tab" data-bs-target="#pane-archived" type="button" role="tab" aria-controls="pane-archived" aria-selected="false">
            <i class="bi bi-folder-fill" style="font-size:1.15rem;"></i>
            <span>Mariages archivés</span>
        </button>
    </li>
</ul>

<div class="tab-content w-100">
    <!-- À venir -->
    <div class="tab-pane fade show active" id="pane-upcoming" role="tabpanel" aria-labelledby="tab-upcoming">
        {% set found = false %}
        {% if is_granted('ROLE_MUSICIAN') and not is_granted('ROLE_ADMIN')%}
        {% set weddings = app.user.weddingsAsMusicians%}
        {% endif %}
        {% for wedding in weddings %}
            {% if wedding.archive is not defined or not wedding.archive %}
                {% set found = true %}
                <div class="app-card-light mb-3">
                    <!-- grid responsive : avatar/info | Type célébration | Total | Restant | Actions -->
                    <div class="wedding-grid">
                         <!-- avatar + info -->
                         <div class="wedding-grid__main">
                             <div class="app-avatar">
                                 {% if wedding.mariee and wedding.marie %}
                                     {{ (wedding.mariee.firstName|default('')|slice(0,1)|upper) }}&{{ (wedding.marie.firstName|default('')|slice(0,1)|upper) }}
                                 {% else %}
                                     -
                                 {% endif %}
                             </div>
                             <div>
                                 <div class="fw-bold">
                                     Mariage de {{ wedding.marie ? wedding.marie.firstName ~ ' ' ~ wedding.marie.name : '-' }} &amp; {{ wedding.mariee ? wedding.mariee.firstName ~ ' ' ~ wedding.mariee.name : '-' }}
                                 </div>
                                 <div class="small text-muted">
                                     {{ wedding.church|default('') }}{% if wedding.addressPostalCodeAndCity is not null %} — {{ wedding.addressPostalCodeAndCity }}{% endif %}{% if wedding.date is defined %} — {{ wedding.date|date('d/m/Y') }}{% endif %}
                                 </div>
                             </div>
                         </div>
 
                        <!-- Type de célébration -->
                        <div class="wedding-grid__item">
                            <div class="info-label text-center">
                                <div class="info-label-value">
                                    {% if wedding.messe is defined and wedding.messe %}Messe{% else %}Sans Eucharistie{% endif %}
                                </div>
                                <div class="info-label-caption">Célébration</div>
                            </div>
                        </div>
 
                         <!-- Total -->
                         <div class="wedding-grid__item">
                             <div class="info-label text-end">
                                 <div class="info-label-value">{{ wedding.montantTotal is defined ? (wedding.montantTotal ~ ' €') : '-' }}</div>
                                 <div class="info-label-caption">Total</div>
                             </div>
                         </div>
 
                         <!-- Restant -->
                         <div class="wedding-grid__item">
                             <div class="info-label text-end">
                                 <div class="info-label-value">
                                     {% if wedding.montantTotal is defined and wedding.montantPaye is defined %}
                                         {{ (wedding.montantTotal - wedding.montantPaye) ~ ' €' }}
                                     {% else %}
                                         -
                                     {% endif %}
                                 </div>
                                 <div class="info-label-caption">Restant</div>
                             </div>
                         </div>
 
                         <!-- Actions -->
                         <div class="wedding-grid__actions">
                            <a href="{{ path('app_wedding_view', {'id': wedding.id}) }}" class="btn btn-sm btn-light" title="Voir"><i class="bi bi-eye"></i></a>

                            {% if wedding.archive is defined and wedding.archive %}
                                <form method="post" action="{{ path('app_wedding_unarchive', {'id': wedding.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('unarchive' ~ wedding.id) }}">
                                    <button class="btn btn-sm btn-light" title="Désarchiver"><i class="bi bi-folder-check"></i></button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('app_wedding_archive', {'id': wedding.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ wedding.id) }}">
                                    <button class="btn btn-sm btn-light" title="Archiver"><i class="bi bi-archive"></i></button>
                                </form>
                            {% endif %}

                            {% if 'ROLE_ADMIN' in app.user.roles or ('ROLE_MUSICIAN' in app.user.roles and wedding in app.user.weddingsAsMusicians) %}
                                <a href="{{ path('app_wedding_edit', {'id': wedding.id}) }}" class="btn btn-sm btn-light" title="Modifier"><i class="bi bi-pencil"></i></a>
                            {% else %}
                                <span class="invisible"><i class="bi bi-pencil"></i></span>
                            {% endif %}

                            {% if 'ROLE_ADMIN' in app.user.roles or ('ROLE_MUSICIAN' in app.user.roles and wedding in app.user.weddingsAsMusicians) %}
                                <form method="post" action="{{ path('app_wedding_delete', {'id': wedding.id}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce mariage ? Cette action est irréversible !');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ wedding.id) }}">
                                    <button class="btn btn-sm btn-danger" title="Supprimer"><i class="bi bi-trash"></i></button>
                                </form>
                            {% else %}
                                <span class="invisible"><i class="bi bi-trash"></i></span>
                            {% endif %}
                        </div>
                     </div>
                 </div>
            {% endif %}
        {% endfor %}

        {% if not found %}
            <div class="text-muted">Aucun mariage à venir.</div>
        {% endif %}
    </div>

    <!-- Archivés -->
    <div class="tab-pane fade" id="pane-archived" role="tabpanel" aria-labelledby="tab-archived">
        {% set foundArchived = false %}
        {% for wedding in weddings %}
            {% if wedding.archive is defined and wedding.archive %}
                {% set foundArchived = true %}
                <div class="app-card-light mb-3">
                    <div class="wedding-grid">
                        <!-- avatar + info -->
                        <div class="wedding-grid__main">
                            <div class="app-avatar">
                                {% if wedding.mariee and wedding.marie %}
                                    {{ (wedding.mariee.firstName|default('')|slice(0,1)|upper) }}&{{ (wedding.marie.firstName|default('')|slice(0,1)|upper) }}
                                {% else %}
                                    -
                                {% endif %}
                            </div>
                            <div>
                                <div class="fw-bold">
                                    Mariage de {{ wedding.marie ? wedding.marie.firstName ~ ' ' ~ wedding.marie.name : '-' }} &amp; {{ wedding.mariee ? wedding.mariee.firstName ~ ' ' ~ wedding.mariee.name : '-' }}
                                </div>
                                <div class="small text-muted">
                                    {{ wedding.church|default('') }}{% if wedding.addressPostalCodeAndCity is defined and wedding.addressPostalCodeAndCity %} — {{ wedding.addressPostalCodeAndCity }}{% endif %}{% if wedding.date is defined %} — {{ wedding.date|date('d/m/Y') }}{% endif %}
                                </div>
                            </div>
                        </div>

                        <!-- Type de célébration -->
                        <div class="wedding-grid__item">
                            <div class="info-label text-center">
                                <div class="info-label-value">
                                    {% if wedding.messe is defined and wedding.messe %}Messe{% else %}Sans Eucharistie{% endif %}
                                </div>
                                <div class="info-label-caption">Célébration</div>
                            </div>
                        </div>

                        <!-- Total -->
                        <div class="wedding-grid__item">
                            <div class="info-label text-end">
                                <div class="info-label-value">{{ wedding.montantTotal is defined ? (wedding.montantTotal ~ ' €') : '-' }}</div>
                                <div class="info-label-caption">Total</div>
                            </div>
                        </div>

                        <!-- Restant -->
                        <div class="wedding-grid__item">
                            <div class="info-label text-end">
                                <div class="info-label-value">
                                    {% if wedding.montantTotal is defined and wedding.montantPaye is defined %}
                                        {{ (wedding.montantTotal - wedding.montantPaye) ~ ' €' }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </div>
                                <div class="info-label-caption">Restant</div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="wedding-grid__actions">
                            <a href="{{ path('app_wedding_view', {'id': wedding.id}) }}" class="btn btn-sm btn-light" title="Voir"><i class="bi bi-eye"></i></a>

                            {% if 'ROLE_ADMIN' in app.user.roles or ('ROLE_MUSICIAN' in app.user.roles and wedding in app.user.weddingsAsMusicians) %}
                                <form method="post" action="{{ path('app_wedding_unarchive', {'id': wedding.id}) }}" style="display:inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('unarchive' ~ wedding.id) }}">
                                    <button class="btn btn-sm btn-light" title="Désarchiver"><i class="bi bi-folder-check"></i></button>
                                </form>

                                <a href="{{ path('app_wedding_edit', {'id': wedding.id}) }}" class="btn btn-sm btn-light" title="Modifier"><i class="bi bi-pencil"></i></a>

                                <form method="post" action="{{ path('app_wedding_delete', {'id': wedding.id}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce mariage ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ wedding.id) }}">
                                    <button class="btn btn-sm btn-danger" title="Supprimer"><i class="bi bi-trash"></i></button>
                                </form>
                            {% else %}
                                <span class="invisible"><i class="bi bi-folder-check"></i></span>
                                <span class="invisible"><i class="bi bi-pencil"></i></span>
                                <span class="invisible"><i class="bi bi-trash"></i></span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        {% if not foundArchived %}
            <div class="text-muted">Aucun mariage archivé.</div>
        {% endif %}
    </div>
</div>

{% endblock %}