{% extends 'base.html.twig' %}

{% block title %}Liste des mariages{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Liste des mariages</h1>

    <a href="{{ path('app_wedding_edit') }}" class="btn btn-primary mb-3">Ajouter un mariage</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Marié</th>
                <th>Mariée</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for wedding in weddings %}
                <tr>
                    <td>{{ wedding.id }}</td>
                    <td>{{ wedding.marie ? wedding.marie.firstName ~ ' ' ~ wedding.marie.name : '-' }}</td>
                    <td>{{ wedding.mariee ? wedding.mariee.firstName ~ ' ' ~ wedding.mariee.name : '-' }}</td>
                    <td>{{ wedding.date|date('d/m/Y') }}</td>
                    <td>
                        <a href="{{ path('app_wedding_view', {'id': wedding.id}) }}" class="btn btn-sm btn-info">Voir</a>
                        {% if 'ROLE_ADMIN' in app.user.roles or ('ROLE_MUSICIAN' in app.user.roles and wedding in app.user.weddingsAsMusicians) %}
                        <a href="{{ path('app_wedding_edit', {'id': wedding.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        {% endif %}
                        {% if 'ROLE_ADMIN' in app.user.roles %}
                        <form method="post" action="{{ path('app_wedding_delete', {'id': wedding.id}) }}" style="display:inline;"
          onsubmit="return confirm('Voulez-vous vraiment supprimer ce mariage ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ wedding.id) }}">
        <button class="btn btn-sm btn-danger">Supprimer</button>
    </form>
    {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun mariage trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}