{% extends 'base.html.twig' %}

{% block title %}{{ wedding.id ? 'Modifier le mariage' : 'Ajouter un mariage' }}{% endblock %}

{% block body %}
<script src="https://js.stripe.com/v3/"></script>
<div class="container mt-4">
    <h1>{{ wedding.id ? 'Modifier le mariage' : 'Ajouter un mariage' }}</h1>

    {{ form_start(form) }}

    <div class="mb-3">
        {{ form_label(form.marie) }}
        {{ form_widget(form.marie, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.marie) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.mariee) }}
        {{ form_widget(form.mariee, {'attr': {'class': 'form-select'}}) }}
        {{ form_errors(form.mariee) }}
    </div>

    <div class="mb-3" {% if wedding.id %} disabled {% endif %}>
        {{ form_label(form.date) }}
        {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.date) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.parish) }}
        {{ form_widget(form.parish, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.parish) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.church) }}
        {{ form_widget(form.church, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.church) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.addressLine1) }}
        {{ form_widget(form.addressLine1, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.addressLine1) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.addressLine2) }}
        {{ form_widget(form.addressLine2, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.addressLine2) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.addressPostalCodeAndCity) }}
        {{ form_widget(form.addressPostalCodeAndCity, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.addressPostalCodeAndCity) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.musicians) }}
        {{ form_widget(form.musicians, {'attr': {'class': 'form-select', 'multiple': 'multiple'}}) }}
        {{ form_errors(form.musicians) }}
    </div>
    {% if wedding.id %}
    <h2>Chants associés</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Type de chant</th>
                <th>Choisir le chant</th>
            </tr>
        </thead>
        <tbody>
    {% for type in songTypes %}
        <tr>
            <td>{{ type.name }}</td>
            <td>
                <select name="songs[{{ type.id }}]" class="form-select">
                    <option value="">-- Aucun --</option>
                    {% for song in availableSongsByType[type.id]|default([]) %}
                        <option value="{{ song.id }}"
                            {% if wedding.songs.contains(song) %}selected{% endif %}>
                            {{ song.name ?: 'Sans nom' }}
                        </option>
                    {% endfor %}
                </select>
            </td>
        </tr>
    {% endfor %}
</tbody>
    </table>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') or wedding.id or app.user.subscription %}
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {% if wedding.id %}
            <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#inviteModal">
                Inviter quelqu'un
            </button>
        {% endif %}
    {% else %}
        <button id="stripe-button" class="btn btn-success">Payer 50€ pour créer le mariage</button>
    {% endif %}

    <a href="{{ path('app_wedding_index') }}" class="btn btn-secondary">Annuler</a>
    {{ form_end(form) }}
    <br>
</div>

<!-- Modal d'invitation -->
<div class="modal fade" id="inviteModal" tabindex="-1" aria-labelledby="inviteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inviteModalLabel">Inviter quelqu'un</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="{{ path('app_wedding_invite', {'id': wedding.id}) }}" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">Rôle</label>
                        <select class="form-select" id="role" name="role" required>
                            <option value="musicien">Musicien</option>
                            <option value="marie">Marié</option>
                            <option value="mariee">Mariée</option>
                        </select>
                    </div>
                </div>
                {% if generatedInvitationLink is defined %}
                    <div class="alert alert-info mt-3">
                        <p>Lien d'invitation généré :</p>
                        <div class="input-group">
                            <input type="text" class="form-control" id="invitation-link" value="{{ generatedInvitationLink }}" readonly>
                            <button type="button" class="btn btn-outline-secondary" onclick="copyInvitationLink()">Copier</button>
                        </div>
                    </div>
                    <script>
                        function copyInvitationLink() {
                            var copyText = document.getElementById("invitation-link");
                            copyText.select();
                            copyText.setSelectionRange(0, 99999); // For mobile
                            navigator.clipboard.writeText(copyText.value).then(function() {
                                alert("Lien copié dans le presse-papiers !");
                            });
                        }
                    </script>
                {% endif %}
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Envoyer l'invitation</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}